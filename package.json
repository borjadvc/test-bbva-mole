{
  "name": "test-bbva-mole",
  "description": "Webcomponent test-bbva-mole following open-wc recommendations",
  "license": "MIT",
  "author": "test-bbva-mole",
  "version": "0.0.0",
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "exports": {
    ".": "./index.js",
    "./test-bbva-mole.js": "./test-bbva-mole.js"
  },
  "scripts": {
    "start": "web-dev-server",
    "start:build": "web-dev-server --root-dir dist --app-index index.html --open",
    "build": "rimraf dist && rollup -c rollup.config.js && npm run analyze -- --exclude dist",
    "lint": "eslint --ext .js,.html . && prettier \"**/*.js\" --check",
    "lint:fix": "eslint --ext .js,.html . --fix && prettier \"**/*.js\" --write",
    "storybook": "npm run analyze -- --exclude dist && npm run start -- -c .storybook/server.mjs",
    "storybook:build": "npm run analyze -- --exclude dist && build-storybook",
    "test:unit": "web-test-runner",
    "test:unit:watch": "web-test-runner --watch",
    "test:unit:coverage": "npm run test:unit -- --coverage",
    "validate": "npm run lint && npm run test:unit:coverage",
    "analyze": "cem analyze --litelement"
  },
  "dependencies": {
    "@vaadin/router": "^1.7.5",
    "lit": "^2.0.2",
    "sinon": "^15.0.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.4",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/building-rollup": "^2.0.2",
    "@open-wc/eslint-config": "^9.2.1",
    "@open-wc/testing": "^3.1.6",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@web/dev-server": "^0.1.34",
    "@web/dev-server-storybook": "^0.5.4",
    "@web/rollup-plugin-html": "^1.11.0",
    "@web/rollup-plugin-import-meta-assets": "^1.0.7",
    "@web/test-runner": "^0.14.0",
    "@web/test-runner-junit-reporter": "^0.5.0",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "deepmerge": "^4.2.2",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-lit": "^1.8.2",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-image": "^1.0.2",
    "rollup-plugin-workbox": "^6.2.0",
    "sinon": "^15.0.2"
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "extends": [
      "@open-wc",
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
